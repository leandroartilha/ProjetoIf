@model ProjetoIF.Models.Usuario
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<hr />
<div class="col-md-4">
    <form asp-controller="Usuarios" asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="EmailUsuario" class="control-label"></label>
                    <input asp-for="EmailUsuario" class="form-control" type="email" placeholder="Digite seu email" />
                    <span asp-validation-for="EmailUsuario" class="text-danger"></span>
                    @*@Html.ValidationMessageFor(u => u.EmailUsuario)*@
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <div class="form-group">
                    <label asp-for="SenhaUsuario" class="control-label"></label>
                    <input asp-for="SenhaUsuario" class="form-control" type="password" placeholder="Digite sua senha" />
                    <span asp-validation-for="SenhaUsuario" class="text-danger"></span>
                    @*@Html.ValidationMessageFor(u => u.SenhaUsuario)*@
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="form-group">
                    <input type="submit" value="Entrar" class="btn btn-primary" />
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <a asp-action="Create" class="btn btn-primary">Cadastre-se</a>
                </div>

            </div>
        </div>

    </form>
</div>

